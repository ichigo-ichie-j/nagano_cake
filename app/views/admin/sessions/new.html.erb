<div class="row my-5">
  <div class="col-2">
  </div>
   <div class="col-4 pl-5">
    <h3 class="bg-light d-flex align-items-center justify-content-center w-75">管理者ログイン</h3>
   </div>
  <div class="col-6">
  </div>
</div>

<div class="row my-3">
  <div class="col-2">
   </div>
    <div class="col-2">
    メールアドレス
   </div>
    <div class="col-2">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
    </div>
</div>
<div class="row mb-3">
  <div class="col-2">
  </div>
  <div class="col-2">
    パスワード
  </div>
  <div class="col-2">
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password" %>
  </div>
</div>

<div class="row my-4">
  <div class="col-5">
  </div>
    <div class="col-2">
      <%= f.submit "ログイン", class:"btn btn-primary w-80" %>
    </div>
  <% end %>
  <div class="col-5">
  </div>
</div>

<%= render "admin/shared/links" %>
