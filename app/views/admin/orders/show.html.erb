<h3>注文履歴詳細</h3>

 <label>購入者</label>
   <!--余裕があれば購入者の購入履歴へのリンクをつける-->
    <%= @order.name %><br>
 <label>注文日</label>
    <%= @order.created_at.to_s(:datetime_jp) %><br>
 <label>配送先</label>
    <%= @order.delivery_address %><br>
 <label>支払方法</label>
    <%= @order.payment_method %><br>
 <label>注文ステータス</label>
    <%= form_with model: @order, url: admin_order_path(@order.id) do |f| %>
      <%= f.select :order, Order.request_statuses.keys.map {|k| [Order.request_statuses_i18n[k], k]} %>
      <%= f.submit '更新', class: 'btn btn-success' %>
    <% end %>
  <table class="table">
   <thead>
     <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
     </tr>
   </thead>
   <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.item.add_tax_non_taxed_price.to_s(:delimited) %></td>
        <td><%= order_item.item_quantity %></td>
        <td><%= order_item.item.add_tax_non_taxed_price.to_s(:delimited) * order_item.item_quantity %></td>
        <td>
         <%= form_with model: order_item, url: admin_order_item_path(order_item.id) do |f| %>
          <%= f.select :production_status, OrderItem.production_statuses.keys.map {|k| [OrderItem.production_statuses_i18n[k], k]} %>
          <%= f.submit '更新', class: 'btn btn-success' %>
         <% end %>
        </td>
       </tr>
    <% end %>
   </tbody>
  </table>
  <table>
   <tr>
     <th>商品合計</th>
     <td><%= @order.invoice_amount.to_s(:delimited) %>円</td>
   </tr>
   <tr>
     <th>送料</th>
     <td> <%= @order.postage %>円</td>
    </tr>
    <tr>
     <th>請求金額合計</th>
     <td><%= (@order.invoice_amount + @order.postage).to_s(:delimited) %>円</td>
    </tr>
  </table>