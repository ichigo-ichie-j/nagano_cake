<div class="container">
	  <div class="row ml-3 mb-5 mt-3">
    <h2 class="head-line title_h2 text-left bg-light d-inline-block"><%= @member.last_name %> <%= @member.first_name %>さんの会員詳細</h2>
    </div>

    <table class='table table table-borderless'>
    <tr>
      <td>会員ID</td>
      <td><%= @member.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @member.last_name %> <%= @member.first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @member.last_name_kana %> <%= @member.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @member.zip_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @member.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @member.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @member.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
      <% if @member.user_status == true %>
      <p class= 'text-success'>有効</p>
       <% else %>
       <p class= 'text-danger'>退会</p>
      <% end %>
      </td>
    </tr>
    </table>

    <div class="row">
  		<%= link_to "編集する", edit_admin_member_path, class:"btn btn btn-success" %>
  	  <%= link_to " 注文履歴を見る",  class:"btn btn btn-success" %>
    </div>
</div>