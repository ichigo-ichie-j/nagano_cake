<div class="container">
	  <div class="row ml-3 mb-5 mt-3">
    <h2 class="head-line title_h2 text-left bg-light d-inline-block">会員一覧</h2>
    </div>

    <table class='table table-hover table-inverse'>
      <thead>
       <tr>
        <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
        <th>ステータス</th>
       </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
        <tr>
          <td><%= member.id %></td>
          <td><%= link_to admin_member_path(member.id) do %>
            <%= member.last_name %> <%= member.first_name %>
            <% end %>
          </td>
          <td><%= member.email %></td>
          <td>
            <% if member.user_status == true %>
            <p class= 'text-success'>有効</p>
            <% else %>
            <p class= 'text-danger'>退会</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
      </table>
      <div class="text-center">
      <%= paginate @members %>
      </div>
</div>

