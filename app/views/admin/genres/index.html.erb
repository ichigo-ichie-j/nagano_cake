<div class="container">
  <div class="row">
    <div clas="col-12">
　　　<div class="my-4">
    　<h2 class="bg-light d-flex align-items-center justify-content-center w-75">ジャンル一覧・追加</h2>
   　　</div>
        <%= form_with url: admin_genres_path(@genre), model: @genre do |f| %>
         <table class="table table-borderless">
            <tr>
              <th>ジャンル名</th>
              <th><%= f.text_field :name, placeholder:"ジャンル名" %></th>
              <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
            </tr>
         </table>
        </div>
    　</div>
         <% end %>
         <div class="row">
            <table class="table table-hover rable-invers">
              <thead>
                <tr>
                  <th class="bg-light">ジャンル</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <% @genres.each do |genre| %>
                 <tr>
                  <th><%= genre.name %></th>
                  <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success py-1" %></td>
                </tr>
              <% end %>
            </table>
         </div>
      </div>
