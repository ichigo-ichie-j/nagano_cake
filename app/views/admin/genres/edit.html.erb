<div class="container">
    <div class="row">
        <div clas="col-12">
            <div class="my-4">
    　        <h3 class="bg-light d-flex align-items-center justify-content-center w-75">ジャンル編集</h3>
   　      　</div>
            <%= form_with url: admin_genre_path(@genre), model: @genre do |f| %>
                <table class="table table-borderless">
                    <tr>
                        <th>ジャンル名</th>
                        <th><%= f.text_field :name, placeholder:"ジャンル名" %></th>
                        <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
                    </tr>
                </table>
            <% end %>
        </div>
    </div>
</div>