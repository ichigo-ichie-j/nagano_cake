<h2>商品一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
     <td><%= item.id %></td>
     <td><%= link_to item.name, admin_item_path(item.id) %></td>
     <td><%= item.non_taxed_price.to_s(:delimited) %></td>
     <td><%= item.genre.name %></td>
     <td>
    <% if item.sales_status == true %>
     <a class="text-success font-weight-bold">販売中</a>
    <% else %>
     <a>販売停止中</a>
	<% end %>
     </td>
     </tr>
    <% end %>
  </tbody>
</table>
  <div class="text-center">
   <%= paginate @items %>
  </div>
 