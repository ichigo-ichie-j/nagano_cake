<div class="container">
	  <div class="row ml-3 mb-5 mt-3">
      <h2 class="head-line title_h2 text-left bg-light d-inline-block">商品新規登録</h2>
    </div>
  <div class="col-md-6 offset-md-3">
  <%= form_with model: @item, url:admin_items_path do |f| %>
  　<div class="form-group" >
      <%= f.label :image, '商品画像' %>

      <%= f.file_field :image, placeholder:"商品画像", accept:"image/*" %>

    </div>
    <div class="form-group" >
      <%= f.label :name, '商品名' %>
      <%= f.text_field :name, placeholder:"商品名" %>
    </div>
    <div class="form-group">
      <%= f.label :explanation, '商品説明' %>
      <%= f.text_area :explanation, placeholder:"ここに説明文を記述します" %>
    </div>
    <div class="form-group">
      <%= f.label :genre_id, 'ジャンル' %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"} %>
    </div>
    <div class="form-group">
      <%= f.label :non_taxed_price, '税抜価格' %>
      <%= f.text_field :non_taxed_price, placeholder:"1000" %>円
    </div>
    <div class="form-group">
      <%= f.label :sales_status, '販売ステータス' %>
      <%= f.radio_button :sales_status, true %>
      <%= f.label :sales_status, '販売中' %>
      <%= f.radio_button :sales_status, false %>
      <%= f.label :sales_status, '販売停止中' %>
    </div>
  <div class="d-grid gap-2 col-6 mx-auto">
   <%= f.submit "新規登録" , class: "btn btn-success"  %>
  </div>
 <% end %>
 </div>
</div>