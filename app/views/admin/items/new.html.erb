
    　<h3>商品新規登録</h3>

   　　<%= form_with model: @item, url:new_admin_item_path do |f| %>
   　　　<div class="form-group" >
         <%= f.label :image, '商品画像' %>
        <%#= image_tag @item.image(200,200) %>
        <%= f.file_field :image, placeholder:"商品画像", accept: "image/*" %>
        </div>
        <div class="form-group" >
         <%= f.label :name, '商品名' %>
         <%= f.text_field :name, placeholder:"商品名" %>
        </div>
        <div class="form-group">
         <%= f.label :explanation, '商品説明' %>
         <%= f.text_area :explanation, placeholder:"ここに説明文を記述します" %>
        </div>
        <div class="form-group">
         <%= f.label :genre_id, 'ジャンル' %>
         <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"} %>
        </div>
        <div class="form-group">
         <%= f.label :non_taxed_price, '税抜価格' %>
         <%= f.text_field :non_taxed_price, placeholder:"1000" %>円
        </div>
        <div class="form-group">
         <%= f.label :sales_status, '販売ステータス' %>
         <%= f.radio_button :sales_status, "販売中": true %>
         <%= f.label :sales_status, '販売中' %>
         <%= f.radio_button :sales_status, "販売停止中": false %>
         <%= f.label :sales_status, '販売停止中' %>
        </div>
      </div>
     </div>
   <div class="row">
  <div class="col-xs-4 col-xs-offset-8">
   <%= f.submit "新規登録" , class: "btn btn-success"  %>
  </div>
  </div>
 <% end %>
</div>
</div>