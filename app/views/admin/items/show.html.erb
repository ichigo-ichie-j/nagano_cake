<div class="container">
  <div class="row ml-3 mb-5 mt-3">
   <h2 class="head-line title_h2 text-left bg-light d-inline-block">商品詳細</h2>
  </div>
 <div class="row">
   <div class="col-lg-4">
     <%= image_tag @item.image, size: "300x200" %>
   </div>
<div class="col-lg-8">
 <table>
  <tr>
    <th>商品名</th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%= @item.explanation %></td>
  </tr>
  <tr>
    <th>ジャンル</th>
    <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <th>税込価格<br>
      （税抜価格）</th>
    <td><%= @item.add_tax_non_taxed_price.to_s(:delimited) %>（<%= @item.non_taxed_price %>）円</td>
  </tr>
  <tr>
    <th>販売ステータス</th>
    <td>
      <% if @item.sales_status == true %>
        <a class="text-success font-weight-bold">販売中</a>
      <% else %>
        <a class="text-secondary">販売停止中</a>
      <% end %>
    </td>
  </tr>
</table>
<div class="d-grid gap-2 col-6 mx-auto">
 <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
 </div>
 </div>
</div>