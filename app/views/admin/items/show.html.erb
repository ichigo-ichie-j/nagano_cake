<h2>商品詳細</h2>

<%= image_tag @item.image, size: "300x200" %>
<table class="table">
  <tr>
    <th>商品名</th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%= @item.explanation %></td>
  </tr>
  <tr>
    <th>ジャンル</th>
    <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <th>税込価格<br>
      （税抜価格）</th>
    <td><%= @item.add_tax_non_taxed_price.to_s(:delimited) %>（<%= @item.non_taxed_price %>）円</td>
  </tr>
  <tr>
    <th>販売ステータス</th>
    <td>
      <% if @item.sales_status == true %>
        <a class="text-success font-weight-bold">販売中</a>
      <% else %>
        <a class="text-secondary">販売停止中</a>
      <% end %>
    </td>
  </tr>
</table>
<%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>