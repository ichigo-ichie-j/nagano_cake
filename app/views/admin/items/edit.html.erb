<h2>商品編集</h2>

<%= form_with model: @item, url:admin_item_path(@item.id) do |f| %>
<table class="table">
 <tr>
  <th>商品画像</th>
  <td><%= f.file_field :image, placeholder:"商品画像", accept: "image/*"%></td>
 </tr>
 <tr>
  <th>商品名</th>
  <td><%= f.text_field :name %></td>
 </tr>
 <tr>
  <th>商品説明</th>
  <td><%= f.text_area :explanation, size: 25 %></td>
 </tr>
 <tr>
  <th>ジャンル</th>
  <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
 </tr>
 <tr>
  <th>税抜価格</th>
  <td><%= f.text_field :non_taxed_price %>円</td>
 </tr>
 <tr>
  <th>販売ステータス</th>
  <td><%= f.select :sales_status, {"販売中": true, "販売停止中": false} %></td>
 </tr>
</table>
<div class="row">
 <div class="col-xs-4 col-xs-offset-8">
  <%= f.submit '変更を保存', class: "btn btn-success btn-block" %>
  <% end %>
 </div>
</div>

