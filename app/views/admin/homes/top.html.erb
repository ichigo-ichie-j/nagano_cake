<h5>注文履歴一覧</h5>
    <table class="table">
     <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
     </thead>
     <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to '1 order.created_at', admin_order_path(order.id) %>
          </td>
          <td>
            <%= order.member.last_name + order.member.first_name %>
          </td>
          <td>
            <%= @order_items.where(order_id: order.id).sum(:item_quantity) %>
          </td>
          <td><%= order.request_status %></td>
        </tr>
      <% end %>
     </tbody>
    </table>
    <%= paginate @orders %>
