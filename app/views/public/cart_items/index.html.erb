<div class="container">
  <div class="col-md-8 offset-md-1">
    <h2>ショッピングカート</h2>
     <%= link_to 'カートをからにする', destroy_all_cart_items_path, method: :delete, class:"btn btn-sm btn-danger" %>

        <!--<#%= f.hidden_field :item_id, value: cart_item.item.id %>-->
        <!--<#%= f.hidden_field :member_id, value: current_member.id %>-->
            <table class="table table-hover table-inverse">
             <thead>
               <tr>
                 <th>商品名</th>
                 <th>単価（税込）</th>
                 <th>数量</th>
                 <th>小計</th>
                 <th></th>
               </tr>
             </thead>
             <tbody>
                 <% @cart_items.each do |cart_item| %>
                 <tr>
                   <td>
                     <%= image_tag cart_item.item.get_image, size: "100x100" %>
                     <%= cart_item.item.name %>
                   </td>
                   <td><%= cart_item.item.add_tax_non_taxed_price %></td>
                   <td>
                      <%= form_with model:cart_item, local:true do |f| %>
                       <%= f.select :item_quantity, *[1..10] %>
                       <%= f.submit '変更', class: "btn btn-sm btn-success" %>
                      <% end %>
                   </td>
                   <td><%= cart_item.subtotal %></td>
                   <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
                   <% @cart_item_total_price += cart_item.subtotal %>
                 </tr>
                    <% end %>
             </tbody>
           </table>
               <%= link_to '買い物を続ける', items_path, class:"btn btn-sm btn-primary" %>
           <table>
        <tr>
          <td>合計金額</td>
          <td><%= @cart_item_total_price %></td>
        </tr>
      </table>
      <%= link_to '情報入力に進む', new_order_path, class: "btn btn-sm btn-success" %>
  </div>
</div>

