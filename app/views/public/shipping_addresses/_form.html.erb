<%= form_with model:shipping_address, local:true do |f| %>
    <div class="form-group row">
        <%= f.label :"郵便番号", class: "col-md-3" %>
        <%= f.text_field :delivery_code, class: "form-control name col-md-3", placeholder: "0000000" %>
    </div>

    <div class="form-group row">
        <%= f.label :"住所", class: "col-md-3" %>
        <%= f.text_field :delivery_address, class: "form-control name col-md-8", placeholder: "東京都渋谷区渋谷区神園町0-0" %>
    </div>

    <div class="form-group row">
        <%= f.label :"宛名", class: "col-md-3" %>
        <%= f.text_field :address, class: "form-control name col-md-3", placeholder: "令和　陸子" %>
        <%= f.submit "新規登録", class: 'btn btn-success offset-4' %>
    </div>
<% end %>