<div class="container">
   <div class="row ml-3 mb-3">
    <h2 class="head-line title_h2 text-left bg-light d-inline-block">配送先登録/一覧</h2>
   </div>
<%= form_with model:@shipping_address, local:true do |f| %>
    <div class="form-group row">
        <%= f.label :"郵便番号", class: "col-md-3" %>
        <%= f.text_field :delivery_code, class: "form-control name col-md-3" %>
    </div>

    <div class="form-group row">
        <%= f.label :"住所", class: "col-md-3" %>
        <%= f.text_field :delivery_address, class: "form-control name col-md-8" %>
    </div>

    <div class="form-group row">
        <%= f.label :"宛名", class: "col-md-3" %>
        <%= f.text_field :address, class: "form-control name col-md-3" %>
        <%= f.submit "新規登録", class: 'btn btn-success offset-4' %>
    </div>
<% end %>
</div>