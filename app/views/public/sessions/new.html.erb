<div class="row my-5">
  <div class="col-2"></div>
  <div class="col-4 pl-3">
    <h2 class="bg-light d-flex align-items-center justify-content-center w-50">ログイン</h2>
  </div>
  <div class="col-6"></div>
</div>

<div class="row">
  <div class="col-3"></div>
  <div class="col-5">
    <p class="bg-light d-flex align-items-center justify-content-center w-50">会員の方はこちらからログイン<p>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row my-3">
    <div class="col-4"></div>
    <div class="col-2">メールアドレス</div>
    <div class="col-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"sample@example.com" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-4"></div>
    <div class="col-2">パスワード</div>
    <div class="col-4">
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password" %>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-6"></div>
      <div class="col-2">
        <%= f.submit "ログイン", class:"btn btn-success w-50" %>
      </div>
    <div class="col-5">
    </div>
  </div>
<% end %>

<div class="row pt-4">
  <div class="col-4"></div>
  <div class="col-4">
    <p class="bg-light d-flex align-items-center justify-content-center w-50">会員登録がお済みでない方</p>
  </div>
</div>

<div class="row my-3">
  <div class="col-4"></div>
  <div class="col-7">
    <%= link_to "こちら", new_member_registration_path %>から新規登録を行って下さい。
  </div>
  <div class="col-1">
    <%= link_to new_admin_session_path do %>
      <i class="fas fa-home"></i>
    <% end %>
  </div>
