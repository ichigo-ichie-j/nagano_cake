<div class="container">
    <div class="row ml-3 mb-5 mt-3">
    <h2 class="head-line title_h2 text-left bg-light d-inline-block">注文履歴詳細</h2>
    </div>
    <div calss="row">
     <div class="col-8">
       <P><strong>注文情報</strong></p>
       <table class="table table-bordered">
         <tbody>
          <tr>
           <th>注文日</th>
           <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
           <th></br>配送先</th>
           <td>
              <%= @order.delivery_code %></br>
              <%= @order.delivery_address %></br>
              <%= @order.address %>
           </td>
          </tr>
          <tr>
           <th>支払方法</th>
           <td><%= @order.payment_method %></td>
          </tr>
          <tr>
           <th>ステータス</th>
           <td><%= @order.request_status  %></td>
          </tr>
         </tbody>
       </table>
     </div>
     <div calss="row">
     <div class="col-4">
        <table class="table table-bordered">
          <tbody>
           <tr>
           <th>商品合計</th>
           <td><%= @order.invoice_amount %></td>
          </tr>
          <tr>
           <th>配送料</th>
           <td><%= @order.postage %></td>
          </tr>
          <tr>
           <th>ご請求額</th>
           <td><%= @total %></td>
          </tr>
          </tbody>
        </table>
      </div>
      <div class ="col-8">
       <P><strong>注文情報</strong></p>
       <table class="table table-bordered">
         <thead>
          <tr>
       						<th>商品</th>
       						<th>単価(税込)</th>
       						<th>個数</th>
       						<th>小計</th>
					     </tr>
         </thead>
         <tbody>
          <% @order.order_items.each do |order_item| %>
           <tr>
            <td><%= order_item.item.name %></td>
            <td></td>
            <td></td>
            <td></td>
           </tr>
          <% end %>
         </tbody>
       </table>
      </div>
     </div>
    </div>
</div>


