<div class="row">
  <!--ジャンル検索機能の追加-->
  <div class="col-md-2">
    <%= render 'layouts/search_side_bar', genres: @genres %>
  </div>

  <div class="col-10">
    <!--商品一覧何件表示-->
  　　<h2>商品一覧   (全<%= Item.count %>件)</h2>
<!--新着を４件表示-->
          <div class="row">
              <% @items.each do |item| %>
                <div class="item col-md-3 px-1" >
                  <!--アイテム画像表示-->
                  <%= link_to item_path(item.id) do %>
                    <!--アイテム画像を表示-->
                    <%= image_tag item.image, size: "300x200" %>
                  <% end %>
                    <!--商品名と税抜き価格のリンク表示-->
                  <p><%= link_to item.name, item_path(item.id) %></p>
                  <p><%= link_to item_path(item.id) do %>
                     ¥<%= (item.non_taxed_price. * 1.1).floor.to_s(:delimited) %> </p>
                     <% end %>
                </div>
              <% end %>
            </div>
              <ul class="pagination justify-content-center">
      <!--kaminariで8件表示 -->
      <%= paginate @items %>
  </ul>

  </div>


  </div>
