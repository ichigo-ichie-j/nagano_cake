<div class="container">


    <div class="row py-5">
        <div class="p-3 mb-2 col-3 bg-secondary text-white"><h2 class="head-line title_h2 text-left">会員情報編集</h2></div>
        <!--<div class="col-md-1"></div>-->
        <div class="col-md-11">


      <%= form_with model:@member, local:true do |f| %>
        <div class="form-group">
            <div class="row">
                <div class="col">
                  <%= f.label :"氏名" %>
                </div>
                <div class="col">
                <%= f.text_field :last_name, class: "form-control name" %>
                </div>
                <div class="col">
                  <%= f.text_field :first_name, class: "form-control name" %>
                </div>
             </div>
        </div>

        <div class="form-group">
            <%= f.label :"フリガナ" %>
            <%= f.text_field :last_name_kana, class: "form-control name" %>
            <%= f.text_field :first_name_kana, class: "form-control name" %>
        </div>

        <div class="form-group">
            <%= f.label :"フリガナ" %>
            <%= f.text_field :last_name_kana, class: "form-control name" %>
            <%= f.text_field :first_name_kana, class: "form-control name" %>
        </div>

        <div class="form-group">
            <%= f.label :"郵便番号" %>
            <%= f.text_field :zip_code, class: "form-control name" %>
        </div>

        <div class="form-group">
            <%= f.label :"住所" %>
            <%= f.text_field :address, class: "form-control name" %>
        </div>

        <div class="form-group">
            <%= f.label :"電話番号" %>
            <%= f.text_field :phone_number, class: "form-control name" %>
        </div>

        <div class="form-group">
            <%= f.label :"メールアドレス" %>
            <%= f.text_field :email, class: "form-control name" %>
        </div>

        <div class="form-group">
           <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
        </div>

        <div><%=link_to "退会する", unsubscribe_members_path, class: "btn btn-danger" %></div>
     <% end %>
     </div>


